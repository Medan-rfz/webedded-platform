    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch authorization",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/authorization/cmd",
            "env": {
                "AUTH_DB_CONN_STR":"postgresql://admin:255+1@localhost:8083/auth_users"
            }
        },
        {
            "name": "Launch users management",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/users_management/cmd",
        },
    ]
}